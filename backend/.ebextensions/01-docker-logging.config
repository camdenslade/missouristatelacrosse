option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 7

files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/docker.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/eb-docker/containers/eb-current-app/eb-stdouterr.log

  "/opt/elasticbeanstalk/tasks/bundlelogs.d/docker.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/eb-docker/containers/eb-current-app/eb-stdouterr.log

  "/opt/elasticbeanstalk/tasks/publishlogs.d/docker.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/eb-docker/containers/eb-current-app/eb-stdouterr.log

container_commands:
  01_create_log_dir:
    command: "mkdir -p /var/log/eb-docker/containers/eb-current-app"
    ignoreErrors: true
  02_set_log_permissions:
    command: "chmod -R 755 /var/log/eb-docker"
    ignoreErrors: true

