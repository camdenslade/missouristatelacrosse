{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "laxsite-backend",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
  "firestore": {
    "host": "localhost",
    "port": 8085
  },
  "functions": {
    "port": 5001
  },
  "hosting": {
    "port": 5000
  },
  "ui": {
    "enabled": true,
    "port": 4000
  },
  "singleProjectMode": true
}

}
